{
  "name": "studynest",
  "version": "1.0.0",
  "description": "StudyNest v1 â€“ Lightweight Non-AI Desktop App",
  "main": "dist-electron/main.js",
  "author": "",
  "license": "MIT",
  "scripts": {
  "dev": "concurrently -k \"npm:dev:renderer\" \"npm:dev:electron\" \"npm:dev:main\"",
  "dev:renderer": "vite",
  "dev:electron": "tsc -p tsconfig.electron.json --watch --preserveWatchOutput",
  "dev:main": "wait-on tcp:5173 dist-electron/main.js && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron .",
    "build": "npm run build:renderer && npm run build:electron && electron-builder",
    "build:renderer": "vite build",
    "build:electron": "tsc -p tsconfig.electron.json",
    "lint": "tsc --noEmit",
    "preview": "vite preview",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.17",
    "@heroicons/react": "^2.1.3",
    "classnames": "^2.5.1",
    "dexie": "^4.0.7",
  "dexie-react-hooks": "^1.1.7",
    "framer-motion": "^11.2.8",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.26.1",
    "zustand": "^4.5.4"
  },
  "devDependencies": {
    "@types/node": "^20.12.12",
    "@types/react": "^18.3.4",
    "@types/react-dom": "^18.3.2",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^30.0.8",
    "electron-builder": "^24.13.3",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.7",
    "tsx": "^4.16.2",
    "typescript": "^5.5.4",
    "vite": "^5.4.1",
    "wait-on": "^7.0.1"
  },
  "build": {
    "appId": "com.studynest.app",
    "productName": "StudyNest",
    "icon": "build/icons/icon",
    "directories": {
      "buildResources": "build",
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "package.json"
    ],
    "extraMetadata": {
      "main": "dist-electron/main.js"
    },
    "mac": {
      "target": ["dmg", "zip"]
    },
    "win": {
      "target": ["nsis", "zip"]
    },
    "linux": {
      "target": ["AppImage", "deb", "tar.gz"]
    }
  }
}
